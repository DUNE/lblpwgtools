/* 	 Rules 		  */

rule(#nu_e_appearance)<
 	@signal = 1.0@#nu_e_signal_qe : 1.0@#nu_e_signal_cc
	@signalerror = 0.01 : 0.0001
	@background =  1.0@#nu_mu_bg : 1.0@#nc_bg : 1.0@#nu_e_beam_qe : 1.0@#nu_e_beam_cc   
	@backgrounderror = 0.05 : 0.0001
	@backgroundcenter = 1.0 : 0.0
	@errordim_sys_on = 0
	@errordim_sys_off = 2
>

/*
 * Assume highly efficient for picking out QE 
 */
rule(#nu_mu_dis)<
 	@signal = 0.97@#nu_mu_disap_signal
	@signalerror = 	0.05 : 0.03					/*app: 0.01 : 0.0001	*/
	@background =  0.97*0.21@#nu_mu_disap_bg
	@backgrounderror = 0.1 : 0.03				/*app: 0.1 : 0.0001	*/
												/*app: @backgroundcenter = 1.0 : 0.0*/
	@errordim_sys_on = 0
	@errordim_sys_off = 2
>


