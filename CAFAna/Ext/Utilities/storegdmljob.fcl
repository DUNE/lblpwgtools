#include "StoreGDML.fcl"
#include "services.fcl"
#include "Geometry.fcl"
#include "DetectorService.fcl"

process_name: StoreGDMLJob

services: {
  Geometry: @local::standard_geo
  Detector: @local::standard_detector
}

source:
{
  module_type: RootInput # Read root source
  maxEvents:   -1        # Process all events
}

outputs:
{
  out1:
  {
    module_type:  RootOutput
    fileName:     "storegdml.root"
    fastCloning: false
  }
}

physics:
{
  producers: 
  {
    storegdml: @local::standard_storegdml
  }
  filters:
  {
  }
  analyzers: {}
  #
  # Wire paths together
  #
  trigger: [storegdml]
  stream: [out1]
  trigger_paths:      [ trigger ]
  end_paths:          [ stream ]
}
services.Geometry: @local::fd_geo
services.Geometry.ForceUseFCLOnly: true

########################################################################
